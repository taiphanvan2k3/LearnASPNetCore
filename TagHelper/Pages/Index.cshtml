@section Styles{
    <style>
        .form-group label:not(label[class="form-check-label"]) {
            min-width: 200px;
        }

        label[class="form-check-label"] {
            min-width: 100px;
        }
    </style>
}

@addTagHelper *,TagHelper
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
